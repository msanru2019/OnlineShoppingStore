@model IEnumerable<OnlineShoppingStore.DAL.Tbl_Book>

@{
    ViewBag.Title = "Book";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Book
        <a href="../Admin/BookAdd" class="btn btn-info pull-right fa fa-plus">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Book</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1;
                    <tr>
                        <td>@(count)</td>
                        <td>@item.BookName</td>
                        <td>
                            @Html.ActionLink("Edit", "BookEdit", new { bookId = item.BookId })
                        </td>

                    </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>

    </div>

</div>

